	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "server",
			"args": [
				"${workspaceFolder}/server/src/main.ts"
			],
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"skipFiles": [
				"<node_internals>/**"
			],
			"sourceMaps": true,
			"cwd": "${workspaceFolder}/server",
			"console": "integratedTerminal"
		}
	]
}