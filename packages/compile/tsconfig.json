{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": false,
		"importHelpers": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/*"],
	"exclude": ["node_modules", "test"]
}
