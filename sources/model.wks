// 插件唯一名称
#name: "wechat"
// api or database
#comment: "微信插件"
#description: "用于渲染微信小程序页面" 
#way: "database"
#model {
	id: @id @number
	url: @string
	name: @string
	description: @string @nullable
	base: @DateEntity
}

#dto {
	url: @string
	name: @string
	description: @string
}

#api {
	@get
	@post
	@delete
	@update
	@all
}

#router {
	parentPath: 'tool'
	parentTitle: '工具管理'
	parentName: 'Tool'
	parentIcon: 'personnel'
	path: 'wechat'
	title: '微信工具'
	icon: 'plugin'
	name: 'WechatPlugin'
}

#table {
	id: @number @comment("id")
	name: @string @comment("插件名称")
	url: @string @comment("插件URL")
	description: @string @comment("插件描述")
	createTime: @string @date @comment("创建时间")
	updateTime: @string @date @comment("修改时间")
}

#form {
	name: @string @comment("插件名称")
	description: @string @textarea @comment("插件描述")
	url: @string @comment("插件URL")
}
